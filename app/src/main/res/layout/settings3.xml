<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/soundBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:contentDescription="@string/sound_button"
        android:src="@drawable/boton_sonido" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/soundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_string"
            android:textColor="@color/turquoise"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/soundOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_on"
            android:textColor="@color/cyan"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>